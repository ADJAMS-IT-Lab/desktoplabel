<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" android:layout_height="fill_parent"> 

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:gravity="right"
	    android:paddingLeft="10px"
	    android:paddingRight="10px"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	 	
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/app_nueva" 
	    	android:paddingBottom="5px"
	    	android:textSize="32dp" />
		    
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/nueva_texto" 
	    	android:paddingBottom="10px" />
	    	
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="5px" >
		    
			<TextView  
			    android:layout_width="80dp" 
			    android:layout_height="wrap_content" 
			    android:text="@string/etiqueta_caption"  />
	    	
		    <EditText
		    	android:id="@+id/etiqueta" 
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:maxLines="2" />
	 
	 	</LinearLayout>
	 	
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="5px" >
		    
			<TextView  
			    android:layout_width="80dp" 
			    android:layout_height="wrap_content" 
			    android:text="@string/color_fondo"  />
	    	
		    <Button
		    	android:id="@+id/botonColorFondo"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/escoger" /> 
		    	
		</LinearLayout>
	 	
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="5px" >
		    
			<TextView  
			    android:layout_width="80dp" 
			    android:layout_height="wrap_content" 
			    android:text="@string/color_texto"  />
	    	
		    <Button
		    	android:id="@+id/botonColorTexto"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/escoger" /> 
		    
		</LinearLayout>
	 	
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	    	android:paddingBottom="5px" >
		    
			<TextView  
			    android:layout_width="80dp" 
			    android:layout_height="wrap_content" 
			    android:text="@string/icono"  />
	    	
		    <Button
		    	android:id="@+id/botonIcono"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/escoger" /> 
		  
		</LinearLayout>
	 	
	    <Button
	    	android:id="@+id/botonAceptar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/boton_aceptar"  
	    	android:paddingBottom="10px" />
	
	</LinearLayout>
	
</ScrollView>
